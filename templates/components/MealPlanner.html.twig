{# See src/Form/MealPlannerForm.php for the form magic #}
<div
    {{ attributes }}
>
    {{ form_start(form) }}
    {{ form_row(form.meal) }}
    {{ form_row(form.mainFood) }}

    {# Render any extra fields dynamically #}
    {% for child in form %}
        {% if child.vars.name not in ['meal', 'mainFood', '_token'] %}
            {{ form_row(child) }}
        {% endif %}
    {% endfor %}

    {{ form_end(form) }}
</div>
